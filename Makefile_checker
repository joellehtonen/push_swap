NAME = checker
CFLAGS = -Wall -Wextra -Werror -g
CC = gcc
LIBFT_DIR = ./library/libft/
LIBFT = $(LIBFT_DIR)/libft.a
SOURCES =	push_swap_checker.c \
			fill_stack.c \
			check_input.c \
			check_order.c \
			push.c \
			swap.c \
			rotate.c \
			reverse_rotate.c \
			get_next_line.c \
			get_next_line_utils.c \
			get_next_line.h
OBJECTS = $(SOURCES:.c=.o)
HEADER = push_swap_checker.h

all: $(LIBFT) $(NAME)

$(LIBFT):
	make -C $(LIBFT_DIR)

$(NAME): $(OBJECTS)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJECTS) -L$(LIBFT_DIR) -lft

%.o: %.c $(HEADER)
	$(CC) $(CFLAGS) -c $< -o $@

clean: 
	rm -f $(OBJECTS)
	$(MAKE) -C $(LIBFT_DIR) clean

fclean: clean
	rm -f $(NAME)
	$(MAKE) -C $(LIBFT_DIR) fclean

re: fclean all

.PHONY: all clean fclean re